<user-mapping>
    <authorize 
        username="<YOUR_USERNAME>" 
        password="<YOUR_PASSWORD>">
        <connection name="Ubuntu Desktop">
            <protocol>vnc</protocol>
            <param name="hostname">localhost</param>
            <param name="port">5901</param>
            <param name="password"><YOUR_VNC_PASSWORD></param>
        </connection>
    </authorize>
</user-mapping>